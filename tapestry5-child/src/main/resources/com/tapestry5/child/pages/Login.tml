<html t:type="layout" title="tapestry5-child com.example"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

<div class="row">
    <div class="span4 offset3">
        <t:form t:id="login">
            <h2>Please sign in</h2>
            <t:textfield t:id="firstName" class="input-block-level" validate="required" placeholder="FirstName"/>
            <t:textfield t:id="lastName" class="input-block-level" validate="required" placeholder="LastName"/>
            <t:submit class="btn btn-large btn-primary" value="Sign in"/>
        </t:form>
    </div>
</div>

</html>
